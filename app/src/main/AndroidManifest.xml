<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fumagalli2020">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".UI.Login"
            android:label="@string/strLoginPage"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".UI.Register"
            android:label="@string/strRegisterPage"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".UI.Login">
            </meta-data>
        </activity>

        <activity
            android:name=".UI.ResetPassword"
            android:label="@string/strResetButton"
            android:screenOrientation="portrait">
