<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/intestazione"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvOrderCustFiscal"
            android:fontFamily="@font/montserrat_regular">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvOrderState"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/montserrat_regular">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/secondtv"
        android:gravity="center"
        android:layout_toEndOf="@+id/intestazione"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvOrderTotal"
            android:fontFamily="@font/montserrat_regular">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvOrderPickDate"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/montserrat_regular">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvOrderPickTime"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/montserrat_regular">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/secondtv"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnOrderConfirm"
            android:background="@color/clDarkGreen"
            android:src="@drawable/ic_check_white_24dp">
        </ImageButton>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnOrderDelete"
            android:layout_marginLeft="10dp"
            android:background="@color/clRed"
            android:src="@drawable/ic_close_white_24dp">
        </ImageButton>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/icOrderDeleteRequest"
            android:layout_marginLeft="10dp"
            android:visibility="invisible"
            android:src="@drawable/ic_notifications_active_yellow_24dp">
        </ImageView>
    </LinearLayout>

</LinearLayout>