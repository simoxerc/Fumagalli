<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <ImageView
        android:id="@+id/imgItemMarketMarket"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_home_black_24dp" />

    <LinearLayout
        android:id="@+id/ItemMkContainerInfoMk"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/imgItemMarketMarket"
        android:layout_toLeftOf="@id/imgItemMarketArrow"
        android:orientation="vertical"
        android:layout_toEndOf="@id/imgItemMarketMarket"
        android:layout_toStartOf="@id/imgItemMarketArrow">

        <TextView
            android:id="@+id/tvItemMarketAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="12sp"
            tools:targetApi="jelly_bean" />

        <TextView
            android:id="@+id/tvItemMarketCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="12sp"
            tools:targetApi="jelly_bean" />

        <TextView
            android:id="@+id/tvItemMarketPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="12sp"
            tools:targetApi="jelly_bean" />


    </LinearLayout>

    <ImageView
        android:id="@+id/imgItemMarketArrow"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:paddingRight="10dp"
        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
        android:paddingEnd="10dp" />


</RelativeLayout>