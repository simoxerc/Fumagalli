<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/ItemCartPrdContainerInfoPrd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvItemCartProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="14sp"
            android:text="@string/strLogin"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            tools:targetApi="jelly_bean" />

        <TextView
            android:id="@+id/tvItemCartProductTypeQnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="14sp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:text="@string/strSurname"
            tools:targetApi="jelly_bean" />


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ItemCartPrdContainerQnt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ItemCartPrdContainerQntSelected"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="14sp"
                android:text="@string/strQuantitySelected"
                tools:targetApi="jelly_bean" />

            <TextView
                android:id="@+id/tvItemCartProductQntSelected"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="14sp"
                tools:targetApi="jelly_bean"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ItemCartPrdContainerQntChange"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/imgBtnItemCartPrdChangeQtn"
            android:layout_toStartOf="@id/imgBtnItemCartPrdChangeQtn"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="14sp"
                android:text="@string/strQuantity"
                tools:targetApi="jelly_bean" />

            <EditText
                android:id="@+id/edtItemCartProductQntChange"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="14sp"
                android:inputType="number"
                android:background="@drawable/first_custom_edittext"
                android:padding="5dp"
                tools:targetApi="jelly_bean"/>

        </LinearLayout>


        <ImageButton
            android:id="@+id/imgBtnItemCartPrdChangeQtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/imgBtnItemCartPrdRemovePrd"
            android:layout_toStartOf="@id/imgBtnItemCartPrdRemovePrd"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:background="@color/clDarkGreen"
            android:src="@drawable/ic_check_white_24dp"/>

        <ImageButton
            android:id="@+id/imgBtnItemCartPrdRemovePrd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:background="@color/clRed"
            android:src="@drawable/ic_remove_white_24dp"/>

    </RelativeLayout>

</LinearLayout>