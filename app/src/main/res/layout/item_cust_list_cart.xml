<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ItemCartContainerInfoMk"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_toLeftOf="@id/ItemCartContainerInfoCart"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:layout_toStartOf="@id/ItemCartContainerInfoCart">

        <TextView
            android:id="@+id/tvItemCartMkName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="12sp"
            tools:targetApi="jelly_bean"/>

        <TextView
            android:id="@+id/tvItemCartMkAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="12sp"
            tools:targetApi="jelly_bean"/>

        <TextView
            android:id="@+id/tvItemCartMkEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="12sp"
            tools:targetApi="jelly_bean"/>

        <TextView
            android:id="@+id/tvItemCartMkPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="12sp"
            tools:targetApi="jelly_bean"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ItemCartContainerInfoCart"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingRight="30dp"
        android:layout_toLeftOf="@id/ItemCartContainerButton"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/ItemCartContainerButton"
        android:paddingEnd="30dp">

        <TextView
            android:id="@+id/tvItemCartStrTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="12sp"
            android:text="@string/strTotal"
            tools:targetApi="jelly_bean"/>

        <TextView
            android:id="@+id/tvItemCartPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="12sp"
            tools:targetApi="jelly_bean"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ItemCartContainerButton"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp">

            <ImageButton
                android:id="@+id/btnItemViewCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@color/clBlack"
                android:src="@drawable/ic_format_list_bulleted_white_24dp"
                android:layout_marginRight="20dp"/>

            <ImageButton
                android:id="@+id/btnItemDeleteCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@color/clBlack"
                android:src="@drawable/ic_delete_white_24dp"/>

    </LinearLayout>


</RelativeLayout>