<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="?actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="?actionBarSize">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/strMarketName"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/clBlack" />

            <EditText
                android:id="@+id/edtInfoMarketName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:textAlignment="center"
                android:maxLines="1"
                android:padding="3dp"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/clBlack"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/strMarketCity"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/clBlack" />

            <EditText
                android:id="@+id/edtInfoMarketCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:textAlignment="center"
                android:maxLines="1"
                android:padding="3dp"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/clBlack" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/strMarketAddress"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/clBlack"/>

            <EditText
                android:id="@+id/edtInfoMarketAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:textAlignment="center"
                android:maxLines="1"
                android:padding="3dp"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/clBlack"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/strMarketCAP"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/clBlack"/>

            <EditText
                android:id="@+id/edtInfoMarketCAP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="150dp"
                android:layout_marginRight="150dp"
                android:textAlignment="center"
                android:inputType="number"
                android:maxLines="1"
                android:maxLength="5"
                android:padding="3dp"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/clBlack"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/strMarketPhone"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/clBlack" />

            <EditText
                android:id="@+id/edtInfoMarketPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="90dp"
                android:layout_marginRight="90dp"
                android:textAlignment="center"
                android:inputType="phone"
                android:maxLines="1"
                android:padding="3dp"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/clBlack"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/strMarketEmail"
                android:textSize="18sp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/clBlack" />

            <EditText
                android:id="@+id/edtInfoMarketEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:textAlignment="center"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:padding="3dp"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/clBlack" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:stretchColumns="0,1,2"
                android:gravity="center">
                <TableRow>
                    <TextView
                        android:text="@string/strTblDay"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:padding="3dip" />
                    <TextView
                        android:text="@string/strTblTime"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:padding="3dip" />
                    <TextView
                        android:text="@string/strTblTime"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:padding="3dip" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="@string/strLun"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_regular"
                        android:padding="3dip" />
                    <TextView
                        android:id="@+id/tb00"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_regular"
                        android:padding="3dip" />
                    <TextView
                        android:id="@+id/tb01"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_regular"
                        android:padding="3dip" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="@string/strMar"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_regular"
                        android:padding="3dip" />
                    <TextView
                        android:id="@+id/tb10"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_regular"
                        android:padding="3dip" />
                    <TextView
                        android:id="@+id/tb11"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_regular"
                        android:padding="3dip" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="@string/strMer"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_regular"
                        android:padding="3dip" />
                    <TextView
                        android:id="@+id/tb20"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_regular"
                        android:padding="3dip" />
                    <TextView
                        android:id="@+id/tb21"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_regular"
                        android:padding="3dip" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="@string/strGio"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_regular"
                        android:padding="3dip" />
                    <TextView
                        android:id="@+id/tb30"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_regular"
                        android:padding="3dip" />
                    <TextView
                        android:id="@+id/tb31"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_regular"
                        android:padding="3dip" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="@string/strVen"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_regular"
                        android:padding="3dip" />
                    <TextView
                        android:id="@+id/tb40"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_regular"
                        android:padding="3dip" />
                    <TextView
                        android:id="@+id/tb41"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_regular"
                        android:padding="3dip" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="@string/strSab"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_regular"
                        android:padding="3dip" />
                    <TextView
                        android:id="@+id/tb50"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_regular"
                        android:padding="3dip" />
                    <TextView
                        android:id="@+id/tb51"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_regular"
                        android:padding="3dip" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="@string/strDom"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_regular"
                        android:padding="3dip" />
                    <TextView
                        android:id="@+id/tb60"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_regular"
                        android:padding="3dip" />
                    <TextView
                        android:id="@+id/tb61"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_regular"
                        android:padding="3dip" />
                </TableRow>

            </TableLayout>

            <Button
                android:id="@+id/btnInfoMarketModify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:visibility="visible"
                android:padding="5dp"
                android:textSize="14sp"
                android:text="@string/strModifyInfo"/>

            <Button
                android:id="@+id/btnHoursMarketModify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:visibility="visible"
                android:padding="5dp"
                android:textSize="14sp"
                android:text="@string/strModifyHours"/>

            <com.example.fumagalli2020.ExpandableHeightListView
                android:layout_marginTop="20dp"
                android:id="@+id/lstInfoMrktDayWeek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btnAcceptModify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:visibility="gone"
                android:padding="5dp"
                android:text="@string/strAcceptModify"
                android:textSize="14sp" />

        </LinearLayout>

    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/adminMrkt_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/market_administrator_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>